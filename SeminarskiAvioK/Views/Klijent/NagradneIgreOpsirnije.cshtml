
@model NagradnaIgraPrikazVM

@{
    ViewData["Title"] = "NagradneIgreOpsirnije";
    Layout = "~/Views/Shared/_LayoutKlijent.cshtml";
}

<br />

<body style="background-color:whitesmoke">

    <div style="width:100%;">
        @foreach (var x in Model.nagrade)
        {
            <div style="font-size:38px;font-style:italic; font-weight: bold; margin-left:10%;margin-bottom:2%;margin-top:2%">
                @x.Naziv
            </div>

            <div style="font-size:18px; margin-left:6%;margin-bottom:1%;margin-top:1%;width:65%">
                <span style="font-weight:bold">
                    Početak:
                    @x.Pocetak
                </span>
            </div>

            <div style="font-size:18px; margin-left:6%;margin-bottom:1%;margin-top:1%;width:65%">
                <span style="font-weight:bold">
                    Kraj:
                    @x.Kraj
                </span>
            </div>
            <br /><br />
            <div style="font-size:18px; margin-left:6%;margin-bottom:1%;margin-top:1%;margin-right:20%">
                @x.Opis
            </div>
            <br /><br />
            <div>
                <a class="btn btn-outline-info" asp-action="NagradneIgre"
                   style=" margin-left:6%;width:10%"> <i class="fas fa-arrow-circle-left"></i> Nazad</a>
            </div>
        }
    </div>
</body>

<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
</head>

