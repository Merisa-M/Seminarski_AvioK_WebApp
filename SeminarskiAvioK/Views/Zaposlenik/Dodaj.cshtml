@model ZaposenikDodajVM
@{
    ViewData["Title"] = "Dodaj";
}
<br />

<body>
    <h2 style="text-align: center; font-style:italic;">Dodaj zaposlenika</h2>
    <div style="width:70%; margin:auto;">
        <br />
        <br />
        <form asp-action="Snimi" method="post">
            <input type="hidden" asp-for="Zaposlenik.ZaposlenikID" />

            <div class="form-group">
                <label class="label">Ime:</label>
                <input asp-for="Zaposlenik.Ime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ime je obavezno')"
                       oninput="setCustomValidity('')" />
            </div>

            <div class="form-group">
                <label class="label">Prezime:</label>
                <input asp-for="Zaposlenik.Prezime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Prezime je obavezno')"
                       oninput="setCustomValidity('')" />
            </div>
            <div class="form-group">
                <label class="label">Datum rodjenja:</label>
                <input asp-for="Zaposlenik.DatumRodjenja" id="input" class="form-control" />
            </div>
            <div class="form-group">
                <label class="label">Email:</label>
                <input asp-for="Zaposlenik.Email" id="input" class="form-control" />
            </div>
            <div class="form-group">
                <label class="label">Broj ugovora:</label>
                <input asp-for="Zaposlenik.BrojUgovora" id="input" class="form-control" />
            </div>

            <div class="form-group " style="margin-left:5%">
                <label asp-for="Zaposlenik.AdresaSlike"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Zaposlenik.AdresaSlike" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>

                </div>
            </div>
            <input type="submit" value="Snimi" class="btn btn-outline-danger float-right" />
        </form>
    </div>
</body>
<br />
<br />
<a class="btn btn-outline-danger" href="/Zaposlenik/Prikazi">Nazad</a>

