@model ZaposlenikUrediVM

@{
    ViewData["Title"] = "Uredi";
}


<h2 style="text-align: center; font-style:italic;">Uredi </h2>
<br />
<div>
    <form asp-action="UrediSnimi" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="adresaaSlike" />
        <input type="hidden" asp-for="Photo" />


        <div class="form-group">
            <label class="label">Ime</label>
            <input class="form-control" type="text" asp-for="Ime" id="input" />
            <span asp-validation-for="Ime" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label class="label">Prezime</label>
            <input class="form-control" type="text" asp-for="Prezime" id="input" />
            <span asp-validation-for="Prezime" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label class="label">Datum rođenja</label>
            <input class="form-control" type="text" asp-for="DatumRodjenja" id="input" />
            <span asp-validation-for="DatumRodjenja" class="text-danger"></span>

        </div>

        <div class="form-group">
            <label class="label">Broj ugovora</label>
            <input class="form-control" type="text" asp-for="BrojUgovora" id="input" />
            <span asp-validation-for="BrojUgovora" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label class="label">Email</label>
            <input class="form-control" type="text" asp-for="Email" id="input" />
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>

        <div class="form-group " style="margin-left:5%">
            <label asp-for="Photo"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>


        <input type="submit" value="Sačuvaj" class="btn btn-outline-danger float-right" id="snimi" />
    </form>
    <br /><br />
    <a href="/Zaposlenik/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>
</div>



<script>
$(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });</script>

