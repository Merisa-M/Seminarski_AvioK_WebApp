@model NovostiUrediVM
@{
    ViewData["Title"] = "Uredi";
}

<br />
<h2 style="text-align: center; font-style:italic;">Uredi novosti</h2>
<br />
<br />
<div>
    <form asp-action="UrediSnimi" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="id" />
        <input type="hidden" asp-for="adresaaSlike" />
        <input type="hidden" asp-for="Photo" />


        <div class="form-group">
            <label class="label">Naziv</label>
            <input class="form-control" type="text" asp-for="Naziv" id="input" />


        </div>

        <div class="form-group">
            <label class="label">Tekst</label>
            <input class="form-control" type="text" asp-for="Tekst" id="input" />

        </div>

        <div class="form-group">
            <label class="label">Kratki sadržaj</label>
            <input class="form-control" type="text" asp-for="KratkiSadrzaj" id="input" />

        </div>

        <div class="form-group">
            <label class="label">Datum/Vrijeme objave</label>
            <input class="form-control" type="text" asp-for="DatumVrijemeObjave" id="input" />

        </div>


        <div class="form-group " style="margin-left:5%">
            <label asp-for="Photo"></label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose File...</label>
                </div>
            </div>
        </div>

        <input type="submit" value="Sačuvaj" class="btn btn-danger" id="snimi" />
    </form>
    <br />
    <br />
    <a href="/Novosti/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>

</div>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/DodajForm.css">

</head>
<br />
<br />
<a href="/Novosti/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>

<script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        });
    });</script>


