@model AvionUrediVM
@{
    ViewData["Title"] = "Uredi";
}
<br />

<h2 style="text-align: center; font-style:italic;">Uredi</h2>

<br />
<br />
<form asp-action="UrediSnimi" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label>Naziv:</label>
        <input class="form-control" asp-for="Naziv" style="width:250px" />
    </div>
    <div class="form-group">
        <label>Klase:</label>
        <select class="form-control" asp-for="klaseID" asp-items="Model.klase" style="width:250px"></select>
    </div>
    <div class="form-group">
        <label>Kapacitet </label>
        <input class="form-control" asp-for="Kapacitet" style="width:250px" />
    </div>



    <input type="submit" value="Sačuvaj" class="btn btn-outline-danger" id="snimi" />
</form>

<br />
<br />
<a href="/Avion/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>



