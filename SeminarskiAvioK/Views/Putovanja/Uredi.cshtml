@model PutovanjaUrediVM
@{
    ViewData["Title"] = "Uredi";
}
<br />
<h2 style="text-align: center; font-style:italic;">Uredi</h2>

<br />
<br />
<form asp-action="UrediSnimi" method="post">
    <input type="hidden" asp-for="putovanjeid" />

    <div class="form-group">
        <label>Naziv putovanja:</label>
        <input class="form-control" asp-for="naziv" style="width:250px" />
    </div>
    <div class="form-group">
        <label>Grad:</label>
        <select class="form-control" asp-for="GradID" asp-items="Model.gradovi" style="width:250px"></select>
    </div>
    <div class="form-group">
        <label>Opis </label>
        <input class="form-control" asp-for="opis" style="width:250px" />
    </div>

    <div class="form-group">
        <label>Ocjena </label>
        <input class="form-control" asp-for="ocjena" style="width:250px" />
    </div>

    <input type="submit" value="Sačuvaj" class="btn btn-outline-danger" id="snimi" />
</form>

<br />
<br />
<a href="/Putovanja/Prikazi" class="btn btn-warning"><i class="fas fa-arrow-circle-left"></i>  Nazad</a>

