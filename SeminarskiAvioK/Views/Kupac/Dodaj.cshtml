@model KupacDodajVM
@{
    ViewData["Title"] = "Dodaj";
}

<br />
<body>
    <h2 style="text-align: center; font-style:italic;">Dodaj kupca</h2>
    <div style="width:70%; margin:auto;">
        <br />
        <br />
        <form asp-action="Snimi" method="post">
            <input type="hidden" asp-for="Kupac.KupacID" />

            <div class="form-group">
                <label class="label">Ime:</label>
                <input asp-for="Kupac.Ime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Ime je obavezno')"
                       oninput="setCustomValidity('')" />
            </div>

            <div class="form-group">
                <label class="label">Prezime:</label>
                <input asp-for="Kupac.Prezime" id="input" class="form-control" required="" oninvalid="this.setCustomValidity('Prezime je obavezno')"
                       oninput="setCustomValidity('')" />
            </div>
            <div class="form-group">
                <label class="label">Broj telefona:</label>
                <input asp-for="Kupac.BrojTelefona" id="input" class="form-control" />
            </div>
            <div class="form-group">
                <label class="label">Email:</label>
                <input asp-for="Kupac.Email" id="input" class="form-control" />
            </div>
           

            <div class="form-group">
                <label class="label">Broj tokena</label>
                <input asp-for="Kupac.BrojTokena" id="input" class="form-control" value="50" readonly />
            </div>
            <input type="submit" value="Snimi" class="btn btn-outline-danger float-right" />
        </form>
    </div>
</body>
<br />
<br />
<a class="btn btn-outline-danger" href="/Kupac/Prikazi">Nazad</a>
